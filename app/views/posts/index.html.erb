<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.post %></td>
      <td><%= show_member_name(post) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= create_post %>
